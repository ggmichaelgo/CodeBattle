<% 
	@list = UserInfo.all.sort! {|a,b| b.points <=> a.points}
	@list = @list.delete_if { |x| x.username == 'guest'}
	last_point = @list.first.points
	rank = 1
	cnt = 0
	@list.each do |x|
		if x.points < last_point
			rank += cnt
			cnt = 0
			last_point = x.points
		end
		x.rank = rank
		cnt+=1
	end
%>
