<%= javascript_include_tag 'ctf/index' %>
<%= stylesheet_link_tag 'ctf/index' %>

<%	
	list = Ctf.all
%>
<br>
<div style='width: 100%; text-align:center'>
	<%= image_tag 'logo_small.png', :onclick => "location =  '/'", :style => "cursor: pointer" %>	
</div>

<div style='width: 622px; margin: 0 auto;'>
	<table>
		<% cnt = 0 %>
		<% while list.count > 0 %>		
		<tr class='row' id=<%= cnt+=1 %>>
			<% (0...5).each do |i| %>
				<% if list.count > 0 %>
					<% c = list.pop %>
					<td class='question_cell' onclick='location="ctf/<%=c.id%>"'>
						<b class='question_title'><%= c.id %></b>
						<% if c.capturer != nil%>
						<b class='circular_captured_tag blue'><b>ggmichaelgo</b></b>
						<% end %>
					</td>
					<td></td>
				<% end %>
			<% end %>
		</tr>
		<tr><td><br></td></tr>
		<% end %>
	</table>
</div>

<br>