<%= stylesheet_link_tag("bootcamp/index") %>
<%= javascript_include_tag('bootcamp/index')%>
<br>

<%	
	list = @list
	list.reverse!
	solved_questions = @solved_questions
%>
<div style='width: 100%; text-align:center'>
	<%= image_tag 'logo_small.png', :onclick => "location =  '/'", :style => "cursor: pointer" %>	
</div>

<div style='width: 622px; margin: 0 auto;'>
	<table>
		<% cnt = 0 %>
		<% while list.count > 0 %>		
		<tr class='row' id=<%= cnt+=1 %>>
			<% (0...5).each do |i| %>
				<% if list.count > 0 %>
					<% q = list.pop %>
					<td class='question_cell' onclick='location="bootcamp/solve/<%=q.category_index%>"'>
						<b class='question_number_tag'>#</b>
						<b class='question_title'><%= q.category_index %></b>
						<% if  solved_questions.find{ |x| x.question_index == q.category_index } != nil %>
						<!-- <div style='position: absolute'> -->
							<%= image_tag 'circular_solved_tag.png', :class => 'circular_solved_tag' %>
						<!-- </div> -->
						<% end %>
					</td>
					<td></td>
				<% end %>
			<% end %>
		</tr>
		<tr><td><br></td></tr>
		<% end %>
	</table>
</div>

<br>